<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/calculatorFragment">

    <fragment
        android:id="@+id/calculatorFragment"
        android:name="jp.dev.tanaka.coordinatecalculator.ui.CalculatorFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_calculator_to_history"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_calculator_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="jp.dev.tanaka.coordinatecalculator.ui.HistoryFragment"
        android:label="@string/history" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="jp.dev.tanaka.coordinatecalculator.ui.SettingsFragment"
        android:label="@string/settings" />

</navigation>
